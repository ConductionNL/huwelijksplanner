    													    													{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
            <!-- .row -->
            <div class="row animation" data-animation="animation-fade-in" data-delay=" {% if app.session.flashbag.peekAll|length > 0 %}3400{%else%}200{% endif %}" >
            	<div class="post-heading-center">
                	<h2>Verzoeken</h2>
                    <p>Het kan zijn dat u al openstaande verzoeken heeft. In dat geval krijgt u hier de keuze om verder te gaan met een huidig verzoek of een nieuw verzoek op te starten.</p>

                </div>
            </div>
            <div class="row animation" data-animation="animation-fade-in" data-delay=" {% if app.session.flashbag.peekAll|length > 0 %}3400{%else%}200{% endif %}" >
                <div class="col-md-12"> <!-- 4 -->
             <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th scope="col">#</th>
                      <th scope="col">{{ 'reference'|trans }}</th>
                      <th scope="col">Verzoek type</th>
                      <th scope="col">Begonnen op</th>
                      <th scope="col">Status</th>
                      <th scope="col"></th>
                    </tr>
                  </thead>
                  <tbody>
                 	 {% for request in requests %}
                    <tr>
                      <th scope="row">{{ loop.index }}</th>
                      <td>{{ request.reference }}</td>
                      <td>{{ commonground_resource(request.requestType).name }}</td>
                      <td>{{ request.dateCreated|date("H:i:s d-m-Y", "Europe/Paris")}} </td>
                      <td>{{ request.status|trans }}</td>
                      <td>{% if request.status == 'incomplete' %}<a href="{{ path('app_wedding_index', {id: request.id}) }}" class="btn btn-success" role="button">Verder gaan</a>{% endif %}</td>
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
                </div>
            </div>
            <div class="row animation" data-animation="animation-fade-in" data-delay=" {% if app.session.flashbag.peekAll|length > 0 %}3400{%else%}200{% endif %}" >
                <div class="col-md-6"> <!-- 4 -->
     				<a href="{{ path('app_wedding_index') }}" class="btn btn-primary btn-icon btn-block btn-lg"><i class="far fa-rings-wedding"></i> Start huwelijks verzoek</a>
                </div>
            </div>
            <!-- /.row -->
{% endblock %}
