    $mdDateLocaleProvider.shortMonths = ['jan', 'feb', 'mar', 'apr', 'mei', 'jun', 'jul', 'aug', 'sep', 'okt', 'nov', 'dec'];
    $mdDateLocaleProvider.days = ['zondag', 'maandag', 'dinsdag', 'woensdag', 'donderdag', 'vrijdag', 'zaterdag'];
    $mdDateLocaleProvider.shortDays = ['Zo', 'Ma', 'Di', 'Wo', 'Do', 'Vr', 'Za',];
    $mdDateLocaleProvider.minDate = '2020-01-30';
    $mdDateLocaleProvider.formatDate = function (date) {
    return moment(date).format('DD-MM-YYYY');
};
}).controller('AppCtrl', ['$mdDateLocale', '$scope', function ($mdDateLocale, $scope) {
    $scope.today = new Date();
    $scope.minDate = new Date(
    $scope.today.getFullYear(),
    $scope.today.getMonth(),
    $scope.today.getDate() + 42
    );
    $scope.endDate = new Date(
    $scope.today.getFullYear() +1,
    $scope.today.getMonth(),
    $scope.today.getDate()
    );
{% if request.properties.datum is defined and request.properties.datum is not empty %}
$scope.defaultDate = new Date({{ request.properties.datum | date("Y, m, d") }});
$scope.defaultDate = new Date(
    $scope.defaultDate.getFullYear(),
    $scope.defaultDate.getMonth()-1,
    $scope.defaultDate.getDate()
);
{% endif %}

{% if plechtigheid is defined and plechtigheid.id == "1ba1772b-cc8a-4808-ad1e-f9b3c93bdebf" %} // flits huwelijk
$scope.availabledates = function(date) {
    var day = date.getDay();
    return day === 1 ;
};

{% elseif plechtigheid is defined and  plechtigheid.id == "77f6419d-b264-4898-8229-9916d9deccee" %} // gratis trouwen
$scope.availabledates = function(date) {
    var day = date.getDay();
    return day === 1 ;
};

{% elseif plechtigheid is defined and  plechtigheid.id == "2b9ba0a9-376d-45e2-aa83-809ef07fa104" %} // eenvoudig trouwen
$scope.availabledates = function(date) {
    var day = date.getDay();
    return day === 1 || day === 2 || day === 3||   day === 5;
};
